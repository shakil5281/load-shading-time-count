// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:/absolute/path/to/dev.db" // Use the absolute path
}



model TimeEntry {
  id        Int      @id @default(autoincrement())
  date      DateTime
  month     String
  inTime    String
  outTime   String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}