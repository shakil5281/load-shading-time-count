generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL") // Use environment variable for MongoDB connection string
}

model TimeEntry {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  date      DateTime
  month     String
  inTime    String
  outTime   String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
