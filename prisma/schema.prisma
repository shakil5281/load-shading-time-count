// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db" // Directly set the path to the database
}


model TimeEntry {
  id        Int      @id @default(autoincrement())
  date      DateTime
  month     String
  inTime    String
  outTime   String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}