// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL") // Environment variable for SQLite database path
}

model TimeEntry {
  id        Int      @id @default(autoincrement())
  date      DateTime
  month     String
  inTime    String
  outTime   String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}